<%= search_form_for @search, :html => {:class => "form-inline center"} do |f| %>
    <div class="form-group">
	  <%= f.label :receipt_no_cont, "Receipt number", class: "sr-only" %>
	  <%= f.search_field :receipt_no_cont, class: "form-control", placeholder: "receipt number"  %>
	</div>
    <div class="form-group">
      <%= f.label :created_at_in, "Start", class: "sr-only" %>
      <%= f.date_field :created_at_gteq, class: "form-control", 'datepicker' => true %>
    </div>	
    <div class="form-group">
      <%= f.label :created_at_in, "End", class: "sr-only" %>
      <%= f.date_field :created_at_lteq, class: "form-control", 'datepicker' => true %>
    </div>	
	<%= f.submit "\u2315", class: "form-control" %>
<% end %><br>