<p id="notice"><%= notice %></p>
<div class="col-md-12">
  <h2><%= @bill_cont.name %> bill for <%= @bill_cont.first_name %> <%= @bill_cont.last_name %></h2>

  <div class="col-md-6 paper-box">
  		<%= form_for [@bill_cont, @bill_cont.bills.build] do |f| %>
		<%= f.label "Deposit: " %>
		<%= f.number_field :deposit %>
		<%= f.submit "\u27A1" %>
		<% end %>
		<br>
		<p>Add Bills</p>
		<%= form_for [@bill_cont, @bill_cont.bills.build] do |f| %>
		<%= f.label "bill name: " %>
		<%= f.text_field :bill_name %><br>
		<%= f.label "bill price: " %>
		<%= f.number_field :bill_price %>
		<%= f.submit "\u27A1" %>
		<% end %>
  </div>
  <div class="col-md-6 paper-box">
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Deposit</th>
	      <th>Bill Name</th>
	      <th>Price &#8358;</th>
	      <th>Date</th>
	    </tr>   
	  <tbody>
	    <% @mybills.each do |product| %>
	      <tr>
	      	<td><%= product.deposit %></td>
	        <td><%= product.bill_name %></td>
	        <td><%= product.bill_price %></td>
	        <td><%= product.created_at.strftime("%d %b. %Y") %></td>
	      </tr>
	    <% end %>
	  </tbody>  
	  </thead>
	</table>
	<strong>Deposit: &#8358; <%= @deposit %></strong><br>
	Credit: &#8358; <%= @credit %><br>
	Balance: &#8358; <%= @balance%>
	<%= form_for @bill_cont do |f| %>
		<%= f.label :paid %>
		<%= f.check_box :paid %>
		<%= f.submit "\u27A1" %>
	<% end %>
  </div>
</div>  