<p id="notice"><%= notice %></p>
<div class="col-md-8 paper-box">
<h1>Room Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price &#8358;</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_categories.each do |room_category| %>
      <tr>
        <td><%= room_category.name %></td>
        <td><%= room_category.price %></td>
        <td><%= link_to 'Show', room_category %></td>
        <td><%= link_to "\u270E", edit_room_category_path(room_category) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room Category', new_room_category_path %>
</div>