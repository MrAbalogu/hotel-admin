<!DOCTYPE html>
<html>
  <head>
    <title>HotelManagement</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<div id="wrapper">
	<div id="sidebar-wrapper">
	  <ul class="sidebar-nav">
	    <li class="sidebar-brand">
	      <a href="/">
	          Hotel management 
	      </a>
	    </li>
	    <li>
	      <%= link_to "Room type", room_categories_path %>
	    </li>
	    <li>
	      <%= link_to "Rooms", rooms_path %>
	    </li>
	    <li> 
	      <%= link_to "Customers", customers_path %>
	    </li>
	    <li> 
	      <%= link_to "All Bookings", book_rooms_path %>
	    </li>
	    <li> 
	      <%= link_to "All Bills", bill_containers_path %>
	    </li>
	  </ul>
	</div>

	<style type="text/css">
	.btn {
		margin-bottom: 0;
	}
	input[type=submit]{
		background-color: white;
	}
	input[type=submit]:hover {
		border: none;
		-webkit-appearance: none;
	}
	.table > thead > tr > th, .table > thead > tr > td, .table > tbody > tr > th, .table > tbody > tr > td, .table > tfoot > tr > th, .table > tfoot > tr > td{
		padding:0;
	}
	</style>

	<!-- /#sidebar-wrapper -->
	<a href="#menu-toggle" id="menu-toggle">&#8592;</a>
	  <div class="container-fluid">
	    <div class="row">
	      <div class="col-lg-12">
	      <%= yield %>
	      </div>
	    </div>
	  </div>


	</div>
	<!-- Menu Toggle Script -->
	<script>
	$("#menu-toggle").click(function(e) {
	    e.preventDefault();
	    $("#wrapper").toggleClass("toggled");
	});
	</script>
  </body>
</html>
