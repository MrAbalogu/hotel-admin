				    <li><%= link_to 'Room:'+d.room_number+' Faulty', room_path(d) %> </li>
				  <% elsif d.availability == false && d.faulty == nil %>
				    <li><%= link_to 'Room:'+d.room_number, room_path(d) %></li>
