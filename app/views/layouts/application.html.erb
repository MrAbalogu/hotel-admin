	      <h4 class="modal-title" id="myModalLabel">Checking out next tomorrow</h4>
	    </div>
	    <div class="container">
		  <% @rooms.each do |d| %>
		  <% @lodged = BookRoom.all %>
		  <% if d.availability == false %>
		    <% @lodged.each do |customer| %>
