<p id="notice"><%= notice %></p>
<div class="col-md-6 paper-box">
<div class="col-md-8">  
<p>
  <strong>Room number:</strong>
  <%= @room.room_number %>
</p>
<p>
  <strong>Availability:</strong>
  <%= @room.availability? ? "\u2713" : "\u2717" %>
</p>
<!-- <p>
  <strong>Neatness:</strong>
  <%= @room.neatness? ? "\u2713" : "\u2717" %>
</p> -->
<p>
  <strong>Room type:</strong>
  <%= @room.room_category.name %>
</p>
<p>
  <strong>Room price:</strong>
  <%= @room.room_category.price %>
</p>
</div>
<div class="col-md-4">
<%= link_to "\u2190", rooms_path %>
</div>
</div>
<div class="col-md-12 paper-box">
<table class="table table-hover">
  <thead>
    <tr>
      <th>first Name</th>
      <th>last name</th>
      <th>phone</th>
      <th>lodged in</th>
      <th>days</th>
      <th colspan="3"></th>
    </tr>   
  <tbody>
    <% @lodged.each do |product| %>
    <% if product.checked_out == false %>
      <tr>
        <td><%= product.first_name %></td>
        <td><%= product.last_name %></td>
        <td><%= product.phone_number %></td>
        <td><%= product.created_at.strftime("%d %b. %Y. %H:%M") %></td>
        <td><%= distance_of_time_in_words(Time.now, product.created_at.at_midnight) %></td>
      </tr>
    <% end %>  
    <% end %>
  </tbody>  
  </thead>
</table>
</div>








