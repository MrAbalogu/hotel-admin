<%= search_form_for @search, :html => {:class => "form-inline center"} do |f| %>
	<div class="form-group">
	<%= f.label :first_name_cont, "First name", class: "sr-only" %>
	<%= f.search_field :first_name_or_last_name_or_phone_number_cont, class: "form-control", placeholder: "Search for customer here... " %>
	</div>
	<div class="form-group">
	<%= f.submit "\u2315", class: "form-control"  %>
	</div>
<% end %>